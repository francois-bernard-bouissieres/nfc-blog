<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
            android:text="@string/explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_explain"/>

    <TextView
        android:text="@string/placeholder_zero"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/txt_counter"
        android:layout_below="@+id/txt_explain"
        />

    <TextView
            android:text="@string/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_verify"
            android:layout_below="@+id/txt_counter"
            />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_toEndOf="@+id/txt_counter"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/txt_verify"
        android:checked="false" />



</RelativeLayout>
